#!/bin/bash

set -e

RELEASE_NOTES="$*"

if [ -z "$RELEASE_NOTES" ]; then
  echo "Usage: bin/build \"changelog\"" >&2
  exit 1
fi

RELEASE_NOTES="$CHANGELOG" bin/fastlane ios test
RELEASE_NOTES="$CHANGELOG" bin/fastlane ios localhost
RELEASE_NOTES="$CHANGELOG" bin/fastlane ios development
RELEASE_NOTES="$CHANGELOG" bin/fastlane ios staging
RELEASE_NOTES="$CHANGELOG" bin/fastlane ios production
