#!/bin/bash

set -e

CHANGELOG="$*"

if [ -z "$CHANGELOG" ]; then
  echo "Usage: bin/build \"changelog\"" >&2
  exit 1
fi

CHANGELOG="$CHANGELOG" bin/fastlane ios test
CHANGELOG="$CHANGELOG" bin/fastlane ios localhost
CHANGELOG="$CHANGELOG" bin/fastlane ios development
CHANGELOG="$CHANGELOG" bin/fastlane ios staging
CHANGELOG="$CHANGELOG" bin/fastlane ios production
